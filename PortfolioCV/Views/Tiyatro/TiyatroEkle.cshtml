@model Tiyatro
@{
    ViewData["Title"] = "TiyatroEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="film-form-wrapper">
    <form asp-action="TiyatroEkle" method="post" class="film-form" autocomplete="off">
        <h2 class="film-form-title">Yeni Tiyatro Ekle</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="film-form-error">Lütfen tüm alanları eksiksiz ve doğru doldurun.</div>
        }
        <div class="film-form-group">
            <label for="Ad">Tiyatro Adı</label>
            <input type="text" id="Ad" name="Ad" class="film-form-input" value="@Model?.Ad" required />
        </div>
        <div class="film-form-group">
            <label for="TiyatroUrl">Tiyatro Url</label>
            <input type="url" id="TiyatroUrl" name="TiyatroUrl" class="film-form-input" value="@Model?.TiyatroUrl" required />
        </div>
        <div class="film-form-group">
            <label for="ResimUrl">Resim Url</label>
            <input type="url" id="ResimUrl" name="ResimUrl" class="film-form-input" value="@Model?.ResimUrl" required />
        </div>
        <button type="submit" class="film-form-btn">Kaydet</button>
    </form>
</div>



