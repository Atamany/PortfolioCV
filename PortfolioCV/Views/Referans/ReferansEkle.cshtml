@model Referans
@{
    ViewData["Title"] = "ReferansEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="film-form-wrapper">
    <form asp-action="ReferansEkle" method="post" class="film-form" autocomplete="off">
        <h2 class="film-form-title">Yeni Referans Ekle</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="film-form-error">Lütfen tüm alanları eksiksiz ve doğru doldurun.</div>
        }
        <div class="film-form-group">
            <label for="AdSoyad">Referans Adı</label>
            <input type="text" id="AdSoyad" name="AdSoyad" class="film-form-input" value="@Model?.AdSoyad" required />
        </div>
        <div class="film-form-group">
            <label for="Sirket">Şirket</label>
            <input type="text" id="Sirket" name="Sirket" class="film-form-input" value="@Model?.Sirket" required />
        </div>
        <div class="film-form-group">
            <label for="Pozisyon">Pozisyon</label>
            <input type="text" id="Pozisyon" name="Pozisyon" class="film-form-input" value="@Model?.Pozisyon" required />
        </div>
        <div class="film-form-group">
            <label for="Metin">Metin</label>
<textarea rows="15" id="Metin" name="Metin" class="film-form-input" required>@Model?.Metin</textarea>
        </div>
        <div class="film-form-group">
            <label for="ResimUrl">Resim Url</label>
            <input type="url" id="ResimUrl" name="ResimUrl" class="film-form-input" value="@Model?.ResimUrl" required />
        </div>
        <button type="submit" class="film-form-btn">Kaydet</button>
    </form>
</div>






