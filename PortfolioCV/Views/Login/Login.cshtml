@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atamany</title>
    <link rel="icon" type="image/x-icon" href="https://png.pngtree.com/element_our/png/20181008/cv-logo-template-icon-isolated-on-black-background-png_130993.jpg">
    <link rel="stylesheet" href="~/Portfolio/style.css">
</head>
<body>
    <div class="login-bg">
        <div class="login-blobs">
            <div class="blob blob1"></div>
            <div class="blob blob2"></div>
            <div class="blob blob3"></div>
            <div class="login-bg-overlay"></div>
        </div>
        <form class="login-card" method="post" autocomplete="off">
            <h2 class="login-title">Giriş Yap</h2>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="login-error">@ViewBag.ErrorMessage</div>
            }
            <div class="login-group">
                <input type="text" name="username" class="login-input" required placeholder="E-Posta">
            </div>
            <div class="login-group">
                <input type="password" name="password" class="login-input" required placeholder="Şifre">
            </div>
            <button type="submit" class="login-btn">Giriş Yap</button>
        </form>
    </div>
</body>
</html>
