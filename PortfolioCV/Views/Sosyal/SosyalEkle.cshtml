@model Sosyal
@{
    ViewData["Title"] = "SosyalEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="film-form-wrapper">
    <form asp-action="SosyalEkle" method="post" class="film-form" autocomplete="off">
        <h2 class="film-form-title">Yeni Sosyal Medya Ekle</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="film-form-error">Lütfen tüm alanları eksiksiz ve doğru doldurun.</div>
        }
        <div class="film-form-group">
            <label for="Platform">Sosyal Medya Adı</label>
            <input type="text" id="Platform" name="Platform" class="film-form-input" value="@Model?.Platform" required />
        </div>
        <div class="film-form-group">
            <label for="HesapUrl">Sosyal Medya Url</label>
            <input type="url" id="HesapUrl" name="HesapUrl" class="film-form-input" value="@Model?.HesapUrl" required />
        </div>
        <div class="film-form-group">
            <label for="PlatformLogo">Logo Url</label>
            <input type="url" id="PlatformLogo" name="PlatformLogo" class="film-form-input" value="@Model?.PlatformLogo" required />
        </div>
        <button type="submit" class="film-form-btn">Kaydet</button>
    </form>
</div>





