@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Sertifika>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    string search = Context.Request.Query["search"];
}

<div class="film-list-wrapper">
    <div class="film-list-header">
        <h2 class="film-list-title">Sertifika Listesi</h2>
        <div class="film-list-header-row">
            <form method="get" class="film-search-form">
                <input type="text" name="search" value="@search" class="film-search" placeholder="Sertifika adıyla ara..." />
                <button type="submit" class="film-search-btn"><i class="fas fa-search"></i></button>
            </form>
            <a href="/Sertifika/SertifikaEkle" class="film-add-btn"><i class="fas fa-plus"></i> Sertifika Ekle</a>
        </div>
    </div>
    <div class="film-table-responsive">
        <table class="film-table">
            <thead>
                <tr>
                    <th>Sertifika</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ad</td>
                        <td><a href="/Sertifika/SertifikaGuncelle/@item.SertifikaId" class="film-action-btn update"><i class="fas fa-edit"></i></a></td>
                        <td><a href="/Sertifika/SertifikaSil/@item.SertifikaId" class="film-action-btn delete"><i class="fas fa-trash-alt"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="film-pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search = search }))
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />


