@model Podcast
@{
    ViewData["Title"] = "PodcastGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="film-form-wrapper">
    <form asp-action="PodcastGuncelle" method="post" class="film-form" autocomplete="off">
        <h2 class="film-form-title">Podcast Güncelle</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="film-form-error">Lütfen tüm alanları eksiksiz ve doğru doldurun.</div>
        }
        <input type="hidden" asp-for="PodcastId" class="film-form-input" />
        <div class="film-form-group">
            <label for="BolumAd">Bölüm Adı</label>
            <input type="text" asp-for="BolumAd" class="film-form-input" value="@Model?.BolumAd" required />
        </div>
        <div class="film-form-group">
            <label for="PodcastAd">Podcast Adı</label>
            <input type="text" asp-for="PodcastAd" class="film-form-input" value="@Model?.PodcastAd" required />
        </div>
        <div class="film-form-group">
            <label for="PodcastUrl">Podcast Url</label>
            <input type="url" asp-for="PodcastUrl" class="film-form-input" value="@Model?.PodcastUrl" required />
        </div>
        <div class="film-form-group">
            <label for="ResimUrl">Resim Url</label>
            <input type="url" asp-for="ResimUrl" class="film-form-input" value="@Model?.ResimUrl" required />
        </div>
        <button type="submit" class="film-form-btn">Kaydet</button>
    </form>
</div>





