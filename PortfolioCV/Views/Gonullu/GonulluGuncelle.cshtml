@model Gonullu
@{
    ViewData["Title"] = "GonulluGuncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="film-form-wrapper">
    <form asp-action="GonulluGuncelle" method="post" class="film-form" autocomplete="off">
        <h2 class="film-form-title">Gönüllü Çalışma Güncelle</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="film-form-error">Lütfen tüm alanları eksiksiz ve doğru doldurun.</div>
        }
        <input type="hidden" asp-for="GonulluId" class="film-form-input" />
        <div class="film-form-group">
            <label for="KulupAdi">Kurum Adı</label>
            <input type="text" asp-for="KulupAdi" class="film-form-input" value="@Model?.KulupAdi" required />
        </div>
        <div class="film-form-group">
            <label for="Gorev">Görev</label>
            <input type="text" asp-for="Gorev" class="film-form-input" value="@Model?.Gorev" required />
        </div>
        <div class="film-form-group">
            <label for="Yil">Yıl</label>
            <input type="text" asp-for="Yil" class="film-form-input" value="@Model?.Yil" required />
        </div>
        <div class="film-form-group">
            <label for="KulupLogo">Logo Url</label>
            <input type="url" asp-for="KulupLogo" class="film-form-input" value="@Model?.KulupLogo" required />
        </div>
        <button type="submit" class="film-form-btn">Kaydet</button>
    </form>
</div>







