@model Egitim
@{
    ViewData["Title"] = "EgitimEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="film-form-wrapper">
    <form asp-action="EgitimEkle" method="post" class="film-form" autocomplete="off">
        <h2 class="film-form-title">Yeni Eğitim Ekle</h2>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="film-form-error">Lütfen tüm alanları eksiksiz ve doğru doldurun.</div>
        }
        <div class="film-form-group">
            <label for="OkulAdi">Kurum Adı</label>
            <input type="text" id="OkulAdi" name="OkulAdi" class="film-form-input" value="@Model?.OkulAdi" required />
        </div>
        <div class="film-form-group">
            <label for="Bolum">Bölüm Adı</label>
            <input type="text" id="Bolum" name="Bolum" class="film-form-input" value="@Model?.Bolum" required />
        </div>
        <div class="film-form-group">
            <label for="Yil">Yıl</label>
            <input type="text" id="Yil" name="Yil" class="film-form-input" value="@Model?.Yil" required />
        </div>
        <div class="film-form-group">
            <label for="OkulLogo">Logo Url</label>
            <input type="url" id="OkulLogo" name="OkulLogo" class="film-form-input" value="@Model?.OkulLogo" required />
        </div>
        <button type="submit" class="film-form-btn">Kaydet</button>
    </form>
</div>



