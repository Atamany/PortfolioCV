@model Hakkinda
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="card">
    <div class="card-title">Hakkında</div>
    <div style="display: flex; flex-direction: column; gap: 12px;">
        <div><strong>Ad Soyad:</strong> @Model.AdSoyad</div>
        <div><strong>Telefon:</strong> @Model.Telefon</div>
        <div><strong>Mail:</strong> @Model.Email</div>
        <div style="margin-top: 16px;">@Model.HakkindaMetni</div>
    </div>
</div>
<div class="card-row">
    @await Component.InvokeAsync("_DefaultIndexEgitimComponentPartial")
    @await Component.InvokeAsync("_DefaultIndexDeneyimComponentPartial")
    @await Component.InvokeAsync("_DefaultIndexGonulluComponentPartial")
</div>

